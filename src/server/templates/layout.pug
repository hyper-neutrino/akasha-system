include mixins

doctype html
html
    head
        meta(charset="utf-8")
        meta(name="description", content="Akasha System Dashboard")
        meta(name="keywords", content="akasha, tcn, teyvat, collective, network")
        meta(name="author", content="hyper-neutrino")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        meta(property="og:title", content="Akasha System | Dashboard")
        meta(property="og:description", content="Web Edition of the Akasha Terminal.")
        meta(property="og:url", content="https://akasha.hyper-neutrino.xyz/")
        meta(name="theme-color", data-react-helmet="true", content="#2d3136")

        +import-css("/static/styles/stylesheet.css" + version)

        +import-css("https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
        +import-css("https://fonts.googleapis.com/icon?family=Material+Icons")

        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js", defer)
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js", defer)

        script(src="/static/scripts/init.js", defer)

        block dependencies

        title= title || "Akasha Terminal"

    body.grey.darken-4.grey-text.text-lighten-4
        header
            for flash in flashes
                span.flash(style="display: none", data-category=flash.category)!= flash.message
        main
            .blue-grey.lighten-2.top-block
                .container
                    block default
                        block header
                        .subtext
                            | Welcome, 
                            = user.username
                        +link("/logout/", "logout", "Log Out")
            .container
                br
                block main
            block extras
        footer.grey.darken-3.page-footer
            .container &copy; hyper-neutrino, 2022
                br
                br